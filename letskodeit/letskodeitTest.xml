        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="practicePage.TestRadioButton"/>
            <class name="practicePage.TestCheckbox"/>
            <class name="practicePage.TestSelectClass"/>
            <class name="practicePage.TestAutoSuggest"/>
